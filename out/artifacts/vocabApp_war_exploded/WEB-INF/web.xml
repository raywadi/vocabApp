<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>vocabApp.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>listall</servlet-name>
        <servlet-class>vocabApp.ListAll</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listall</servlet-name>
        <url-pattern>/listall</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteall</servlet-name>
        <servlet-class>vocabApp.DeleteAll</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteall</servlet-name>
        <url-pattern>/deleteall</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>vocabApp.Add</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>mailer</servlet-name>
        <servlet-class>vocabApp.Mailer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mailer</servlet-name>
        <url-pattern>/mailer</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
